#!/usr/bin/env ruby
require 'morpheus'

# arguments
args = ARGV

# input pipe
# append piped data as arguments
if !STDIN.tty?
  pipe_data = STDIN.read
  if pipe_data
    args += pipe_data.split
  end
end

# output pipe
# if !STDOUT.tty?

# end

terminal = Morpheus::Terminal.new
exit_code, err = terminal.execute(args)
# raise err unless err.nil?
exit exit_code
